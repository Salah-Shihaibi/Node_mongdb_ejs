    <h4 class = 'btn btn-info m-2'>Add Post</h4>
    <%- include ("./partials/messages"); %>
    <form action="/posts" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="title"
          id="title"
          name="title"
          class="form-control"
          placeholder="Enter title"
          value="<%= typeof title != 'undefined' ? title : '' %>"
        />
      </div>
      <div class="form-group">
        <label for="description">description</label>
        <input
          type="description"
          id="description"
          name="description"
          class="form-control"
          placeholder="Enter description"
          value="<%= typeof description != 'undefined' ? description : '' %>"
        />
      </div>
      <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>

    <ul>
      <% posts.forEach(function(post) { %>
      <li id = '<%= post._id %>'>
        Title: <strong><%= post.title %></strong> <br />
        Post: <%= post.description %> <br />
        Date: <%= post.data %>
        <br />
        <a class="btn btn-danger" href="/posts/delete/<%= post._id %>"
          >Delete</a
        >
        <a class="btn btn-success" href="/posts/adjust/<%= post._id %>"
          >Adjust</a
        >
        <form style = "display: <%= post.edit ? 'none' : '' %>" action="/posts/patch/<%= post._id %>" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="title"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter title"
              value="<%= post.title%>"
            />
          </div>
          <div class="form-group">
            <label for="description">description</label>
            <input
              type="description"
              id="description"
              name="description"
              class="form-control"
              placeholder="Enter description"
              value="<%= post.description%>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <% }); %>
      </li>
    </ul>
    